<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id='tactics.object_route_resolver' class='Tactics\Bundle\AdminBundle\ObjectRouteResolver\ObjectRouteResolver'>
            <argument type='service' id='service_container' />
        </service>
        <service id="tactics_user.group.form.type" class="Tactics\Bundle\AdminBundle\Form\Type\GroupFormType">
            <tag name="form.type" alias="tactics_user_group" />
            <argument>%fos_user.model.group.class%</argument>
            <argument>%security.role_hierarchy.roles%</argument>            
        </service>
    </services>
</container>
