<div class="widget-content">
  
  {% if show.hasFields %}
  
    {% if show.hasFieldsAtPosition('top') %}
    
      <table class="table table-condensed span11">
        <tbody>
          
          {% for field in show.getFields('top') %}
            <tr>
              <th class="span2">
                {{ field.label }}
              </th>
              <td>
                {{ field.value|raw }}
              </td>
            </tr>
          {% endfor %}
          
        </tbody>
      </table>
  
    {% endif %}
  
    {% if show.hasFieldsAtPosition('left') %}
    
      <table class="table table-condensed {{ show.hasFieldsAtPosition('right') ? 'span6' : 'span11' }}">
        <tbody>
          
          {% for field in show.getFields('left') %}
            <tr>
              <th class="span2">
                {{ field.label }}
              </th>
              <td>
                {{ field.value|raw }}
              </td>
            </tr>
          {% endfor %}
          
        </tbody>
      </table>
  
    {% endif %}

    {% if show.hasFieldsAtPosition('right') %}
  
      <table class="table table-condensed {{ show.hasFieldsAtPosition('left') ? 'span5' : 'span11' }}">
        <tbody>
          
          {% for field in show.getFields('right') %}
            <tr>
              <th class="span2">
                {{ field.label }}
              </th>
              <td>
                {{ field.value|raw }}
              </td>
            </tr>
          {% endfor %}
          
        </tbody>
      </table>
  
    {% endif %}
  
    {% if show.hasFieldsAtPosition('bottom') %}
    
      <table class="table table-condensed span11">
        <tbody>
          
          {% for field in show.getFields('bottom') %}
            <tr>
              <th class="span2">
                {{ field.label }}
              </th>
              <td>
                {{ field.value|raw }}
              </td>
            </tr>
          {% endfor %}
          
        </tbody>
      </table>
  
    {% endif %}  
  
  {% endif %}
  
  {% if show.hasHiddenFields %}
  
  <div class="row">
    <div class="span12 collapse" id="hiddenfields">
      
      {% if show.hasFieldsAtPosition('top', true) %}

        <table class="table collapse table-condensed span11">
          <tbody>

            {% for field in show.getFields('top',true) %}
              <tr>
                <th class="span2">
                  {{ field.label }}
                </th>
                <td>
                  {{ field.value|raw }}
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>

      {% endif %}
      
      {% if show.hasFieldsAtPosition('left', true) %}

        <table class="table collapse table-condensed {{ show.hasFieldsAtPosition('right', true)  ? 'span6' : 'span11' }}">
          <tbody>

            {% for field in show.getFields('left',true) %}
              <tr>
                <th class="span2">
                  {{ field.label }}
                </th>
                <td>
                  {{ field.value|raw }}
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>

      {% endif %}

      {% if show.hasFieldsAtPosition('right', true) %}

        <table class="table collapse table-condensed {{ show.hasFieldsAtPosition('left', true) ? 'span5' : 'span11' }}">
          <tbody>

            {% for field in show.getFields('right', true) %}
              <tr>
                <th class="span2">
                  {{ field.label }}
                </th>
                <td>
                  {{ field.value|raw }}
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>

      {% endif %}
      
      {% if show.hasFieldsAtPosition('bottom', true) %}

        <table class="table collapse table-condensed span11">
          <tbody>

            {% for field in show.getFields('bottom',true) %}
              <tr>
                <th class="span2">
                  {{ field.label }}
                </th>
                <td>
                  {{ field.value|raw }}
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>

      {% endif %}      

    </div>
      </div>

    <div class="span12">
      <a href="#" data-toggle="collapse" data-target="#hiddenfields">
        Toon meer
      </a>
    </div>
  
  {% endif %}
</div>
